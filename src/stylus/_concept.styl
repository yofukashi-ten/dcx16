#concept{
  background-image: url('images/concept-back.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #000;
  width: 100%;
  height 100vh;
  padding-top: 35vh;
  padding-bottom: 35vh;
}

#concept #head{
  margin-bottom: 2%;
}

@media screen and (min-width: 770px) {
  #concept p{
    font-size: 28px;
  }
}

@media screen and (min-width: 415px) and (max-width: 769px) {
  #concept p{
    font-size: 36px;
  }
}

@media (max-width: 414px) {
  #concept p{
    font-size: 16px;
  }
}
