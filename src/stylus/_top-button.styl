#page-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
}
#page-top a {
    background-image: url('images/top-button-off.png');
    background-size: contain;
    background-repeat: no-repeat;
    text-decoration: none;
    width: 50px;
    height: 50px;
    padding: 30px 0;
    text-align: center;
    display: block;
}
#page-top a:hover {
    text-decoration: none;
    background-image: url('images/top-button-on.png');
}
