.menu{
  background-color: #050608;
  margin-top: 3vh;
  margin-bottom: 3vh;
}

.menu .col-sm-3{
  border-left: 2px solid #fff;
  border-right: 2px solid #fff;
}

.menu .col-sm-3 + .col-sm-3{
  border-left: none;
  border-right: 2px solid #fff;
}

.menu .row{
  height: 0px;
}

@media (max-width: 768px) {
  .menu{
    margin-top: 3vh;
    margin-bottom: 3vh;
  }

  .menu .col-sm-3{
    border-left: none;
    border-right: none;
  }

  .menu .col-sm-3 + .col-sm-3{
    border-left: none;
    border-right: none;
  }

  .menu .col-xs-6{
    margin-top: 3vh;
    margin-bottom: 3vh;
  }

  .menu .col-xs-6:nth-child(odd){
    border-right: 2px solid #fff;
  }
}
